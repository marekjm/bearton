{
    "doc": {
        "help": "Tool used to manage Bearton pages. Maximal number of --verbose switches that makes sense in this command is two (it has more fine-grained control over error reporting).",
        "usage": [
            "new [<scheme>] <page>",
            "edit <id>",
            "help --examples"
        ],
        "examples": [
            {
                "line": "new <page>",
                "desc": "create new page with type <page> taken from current scheme"
            },
            {
                "line": "new <page> <scheme>",
                "desc": "create new page with type <page> taken from scheme <scheme>"
            },
            {
                "line": "render --all --carry-on | -aC",
                "desc": "Render all pages and try to run as far as is possible by skipping ones that cause errors."
            },
            {
                "line": "render --all --dry-run --verbose | -avD",
                "desc": "Dry-run render all pages. The --verbose switch is used to print more error messages."
            }
        ]
    },
    "commands": {
        "new": {
            "doc": {"help": "Mode used to create new pages."},
            "options": {
                "local": [
                    {
                        "short": "b",
                        "long": "base",
                        "help": "tells Bearton this is a base element that will be built"
                    },
                    {
                        "short": "E",
                        "long": "edit",
                        "help": "instantly launch editor after the page is created"
                    },
                    {
                        "short": "R",
                        "long": "render",
                        "requires": ["--edit"],
                        "help": "render the page instantly after it is created and edited"
                    }
                ]
            },
            "operands": {
                "no": [1, 2]
            }
        },
        "edit": {
            "doc": {"help": "Mode used to edit existing pages."},
            "options": {
                "local": [
                    {
                        "short": "b",
                        "long": "base",
                        "help": "tells Bearton it will be base element that needs editing"
                    },
                    {
                        "short": "F",
                        "long": "from-file",
                        "arguments": ["str"],
                        "help": "read page ids - newline separated - from file"
                    },
                    {
                        "short": "r",
                        "long": "render",
                        "help": "(re)render the page after editing"
                    },
                    {
                        "short": "m",
                        "long": "markdown",
                        "arguments": ["str"],
                        "help": "edit entry's Markdown part with given <name>"
                    },
                    {
                        "short": "j",
                        "long": "json",
                        "help": "edit JSON of the entry"
                    }
                ]
            },
            "operands": {
                "no": [-1]
            }
        },
        "rm": {
            "doc": {"help": "Mode used to remove pages."},
            "operands": {
                "no": [0]
            }
        },
        "render": {
            "doc": {"help": "Mode managing the rendering of pages."},
            "options": {
                "local": [
                    {
                        "long": "all",
                        "short": "a",
                        "help": "build all pages (a rebuilt of the site)"
                    },
                    {
                        "long": "type",
                        "short": "t",
                        "arguments": ["str"],
                        "conflicts": ["--all"],
                        "help": "build all pages of given type"
                    },
                    {
                        "long": "dry-run",
                        "short": "D",
                        "help": "render pages but do not write them to output files"
                    },
                    {
                        "long": "print",
                        "requires": ["--dry-run"],
                        "help": "print rendered HTML while dry running"
                    },
                    {
                        "long": "carry-on",
                        "short": "C",
                        "help": "keep running by skipping pages that cause errors"
                    }
                ]
            },
            "operands": {
                "no": [0]
            }
        }
    },
    "options": {
        "local": [
            {
                "long": "version",
                "help": "display version information"
            }
        ],
        "global": [
            {
                "short": "h",
                "long": "help",
                "help": "dispay help message"
            },
            {
                "short": "v",
                "long": "verbose",
                "plural": true,
                "help": "display more verbose output"
            },
            {
                "short": "d",
                "long": "debug",
                "help": "display debugging output"
            },
            {
                "short": "q",
                "long": "quiet",
                "help": "do not print normal messages"
            },
            {
                "short": "t",
                "long": "target",
                "arguments": ["str"],
                "help": "set target directory"
            }
        ]
    },
    "operands": {
        "no": [0, 0]
    }
}
