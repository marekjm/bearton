{
    "doc": {
        "help": "Interface to Bearton database.",
        "usage": [
            "query [--with-output] [[<scheme>] <element>]",
            "query -e <element> -s <scheme>",
            "query --format \"<format>\"",
            "query --raw <query>",
            "update",
            "update --erase",
            "help --examples"
        ],
        "examples": [
            {
                "line": "query [--with-output]",
                "desc": "Show IDs of all pages, optionally with their output paths."
            },
            {
                "line": "query <element>",
                "desc": "Show IDs of all pages of element's type <element>."
            },
            {
                "line": "query <scheme> <element>",
                "desc": "Show IDs of all pages of element's type <element> and scheme <scheme>."
            },
            {
                "line": "query -- format <format>",
                "desc": "Use specified <format> whe printing lines out, consult manual for more information about formats."
            },
            {
                "line": "query --raw <query>",
                "desc": "Use raw, hand-crafted query <query> to look for page IDs. See manual for more information about raw queries."
            },
            {
                "line": "update [--context-edits-log <file>]",
                "desc": "Update contexts of entries in the database. Optionally, put their IDs into the <file> provided by the option."
            },
            {
                "line": "update --erase [--yes]",
                "desc": "Erase the database. Bearton will ask for confirmation, unless --yes option is provided."
            }
        ]
    },
    "commands": {
        "query": {
            "doc": {
                "help": "Perform a query to Bearton's database to retrieve IDs of pages."
            },
            "options": {
                "local": [
                    {
                        "short": "s",
                        "long": "scheme",
                        "arguments": ["str"],
                        "help": "set scheme to query"
                    },
                    {
                        "short": "e",
                        "long": "element",
                        "arguments": ["str"],
                        "help": "set element to query"
                    },
                    {
                        "short": "F",
                        "long": "format",
                        "arguments": ["str"],
                        "requires": ["--verbose"],
                        "help": "print strings in given format"
                    },
                    {
                        "short": "O",
                        "long": "with-output",
                        "conflicts": ["--format"],
                        "help": "display output paths of matched pages"
                    },
                    {
                        "short": "b",
                        "long": "base",
                        "help": "query base-type elements"
                    },
                    {
                        "short": "r",
                        "long": "raw",
                        "arguments": ["str"],
                        "conflicts": ["-s", "-e"],
                        "help": "takes raw query string (see doc/ to learn how to write them)"
                    }
                ]
            },
            "operands": {
                "no": [-2]
            }
        },
        "update": {
            "doc": {
                "help": "Perform update of the database."
            },
            "options": {
                "local": [
                    {
                        "short": "E",
                        "long": "erase",
                        "help": "erase the database (remove all entries)"
                    },
                    {
                        "short": "y",
                        "long": "yes",
                        "help": "Bearton will not ask for confirmation when wiping the database out",
                        "requires": ["--erase"]
                    },
                    {
                        "short": "l",
                        "long": "context-edits-log",
                        "arguments": ["str"],
                        "help": "path to a file in which the list of required context edits will be stored"
                    }
                ]
            },
            "operands": {
                "no": [0, 0]
            }
        }
    },
    "options": {
        "local": [
            {
                "long": "version",
                "help": "display version information"
            }
        ],
        "global": [
            {
                "short": "h",
                "long": "help",
                "help": "dispay help message"
            },
            {
                "short": "v",
                "long": "verbose",
                "plural": true,
                "help": "display more verbose output"
            },
            {
                "short": "d",
                "long": "debug",
                "help": "display debugging output"
            },
            {
                "short": "q",
                "long": "quiet",
                "help": "do not print normal messages"
            },
            {
                "short": "t",
                "long": "target",
                "arguments": ["str"],
                "help": "set target directory"
            }
        ]
    },
    "operands": {
        "no": [0, 0]
    }
}
