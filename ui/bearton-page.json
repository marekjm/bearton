{
    "new": [
        {
            "short": "s",
            "long": "scheme",
            "arguments": ["str"],
            "help": "use given scheme to create the page"
        },
        {
            "short": "S",
            "long": "schemes",
            "arguments": ["str"],
            "help": "look for schemes in this path"
        },
        {
            "short": "e",
            "long": "element",
            "arguments": ["str"],
            "help": "use given element to create the page"
        },
        {
            "short": "b",
            "long": "base",
            "help": "tells Bearton this is a base element that will be built"
        },
        {
            "short": "E",
            "long": "edit",
            "help": "instantly launch editor after the page is created"
        }
    ],
    "edit": [
        {
            "short": "p",
            "long": "page-id",
            "arguments": ["str"],
            "help": "specify page id"
        },
        {
            "short": "b",
            "long": "base",
            "requires": ["--page-id"],
            "help": "tells Bearton it will be base element that needs editing"
        }
    ],
    "rm": [
        {
            "short": "p",
            "long": "page-id",
            "arguments": ["str"],
            "required": true,
            "help": "specify page id"
        }
    ],
    "render": [
        {
            "short": "S",
            "long": "schemes",
            "arguments": ["str"],
            "help": "look for schemes in this path"
        },
        {
            "short": "a",
            "long": "all",
            "help": "build all pages (a rebuilt of the site)"
        },
        {
            "short": "n",
            "long": "all-new",
            "help": "build all new pages"
        },
        {
            "short": "c",
            "long": "check",
            "help": "prints built element to screen instead of writing it to file"
        },
        {
            "long": "no-print",
            "requires": ["--check"],
            "help": "do not print while checking"
        }
    ],
    "__global__": [
        {
            "short": "v",
            "long": "verbose",
            "help": "display more verbose output"
        },
        {
            "short": "d",
            "long": "debug",
            "help": "display debugging output"
        },
        {
            "short": "q",
            "long": "quiet",
            "help": "do not print normal messages"
        },
        {
            "short": "h",
            "long": "help",
            "help": "dispay help message"
        },
        {
            "short": "t",
            "long": "target",
            "arguments": ["str"],
            "help": "set target directory"
        }
    ]
}
