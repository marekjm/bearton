{
    "doc": {
        "help": "Interface to Bearton configuration file.",
        "usage": [
            "<command> [option...] [operand...]",
            "(--verbose | --quiet) <command> [option...] [operand...]",
            "--debug <command> [option...] [operand...]",
            "help --examples"
        ],
        "examples": [
            {
                "line": "set <key>",
                "desc": "Set a single key with no value, just make it present. Value defaults to empty string."
            },
            {
                "line": "set <key> <value>",
                "desc": "Set the <key> to <value>. Key is either created or has its value updated."
            },
            {
                "line": "rm <key>...",
                "desc": "Remove keys specified as operands."
            },
            {
                "line": "rm --pop --key <key> | rm -pk <key>",
                "desc": "Remove key and print its value to the screen."
            },
            {
                "line": "set <new-key> $(bearton-config rm -pk <old-key>)",
                "desc": "A quick way to rename a key."
            },
            {
                "line": "get [--json] <key>",
                "desc": "To get <key>'s value, optionally JSON-encoded."
            },
            {
                "line": "get [--json] --list",
                "desc": "Get list of all keys in the config file, optionally JSON-encoded."
            },
            {
                "line": "get --verbose --list | -lv",
                "desc": "Get all <key>=<value> pairs in the config file printed to the screen."
            },
            {
                "line": "get --verbose --json --list | get -vjl",
                "desc": "Get JSON-encoded dictionary containing all of config file fields."
            }
        ]
    },
    "commands": {
        "get": {
            "doc": {"help": "Mode used for getting information about configuration."},
            "options": {
                "local": [
                    {
                        "short": "k",
                        "long": "key",
                        "arguments": ["str"],
                        "help": "get value of key"
                    },
                    {
                        "short": "l",
                        "long": "list",
                        "conflicts": ["--key"],
                        "help": "list all keys (if verbose, list all key=value pairs)"
                    },
                    {
                        "short": "j",
                        "long": "json",
                        "help": "format output as JSON"
                    }
                ]
            },
            "operands": {
                "no": [0, 1]
            }
        },
        "set": {
            "doc": {"help": "Mode used for setting information in configuration, e.g. setting new keys, changing their values etc."},
            "operands": {"no": [1, 2]}
        },
        "rm": {
            "doc": {"help": "Mode used for removing information from configuration"},
            "options": {
                "local": [
                    {
                        "short": "p",
                        "long": "pop",
                        "help": "print value of the key before removing it"
                    }
                ]
            },
            "operands": {
                "no": [0]
            }
        }
    },
    "options": {
        "local": [
            {
                "long": "version",
                "help": "display version information"
            }
        ],
        "global": [
            {
                "short": "h",
                "long": "help",
                "help": "dispay help message"
            },
            {
                "short": "v",
                "long": "verbose",
                "plural": true,
                "help": "display more verbose output"
            },
            {
                "short": "d",
                "long": "debug",
                "help": "display debugging output"
            },
            {
                "short": "q",
                "long": "quiet",
                "conflicts": ["--verbose"],
                "help": "do not print normal messages"
            },
            {
                "short": "t",
                "long": "target",
                "arguments": ["str"],
                "help": "set target directory"
            }
        ]
    },
    "operands": {
        "no": [0, 0]
    }
}
