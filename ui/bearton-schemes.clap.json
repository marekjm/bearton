{
    "doc": {
        "help": "Tool used to manage Bearton schemes.",
        "usage": [
            "[<command>] [<option>...]",
            "help --examples"
        ],
        "examples": [
            {
                "line": "ls --group",
                "desc": "Display all available schemes, grouped by directories where they are stored."
            },
            {
                "line": "ls --mark-current",
                "desc": "Mark currently used scheme."
            },
            {
                "line": "inspect [--elements] --buildable",
                "desc": "List all buildable elements of a scheme, i.e. elements that can be instantiated and rendered. The --elements is optional as it is implied by --buildable."
            },
            {
                "line": "inspect [--elements] --base",
                "desc": "List all base elements of a scheme, i.e. elements that cannot be instantiated. The --elements is optional as it is implied by --base."
            },
            {
                "line": "apply [--force] <scheme>",
                "desc": "Apply selected <scheme> to the webpage. Optionally, --force the change, i.e. remove everything that is present and create structure from scratch."
            }
        ]
    },
    "commands": {
        "apply": {
            "doc": {"help": "Apply scheme to page."},
            "options": {
                "local": [
                    {
                        "short": "f",
                        "long": "force",
                        "help": "remove all existing scheme-parts before applying"
                    }
                ]
            },
            "operands": {
                "no": [-1]
            }
        },
        "inspect": {
            "doc": {"help": "Get information about scheme."},
            "options": {
                "local": [
                    {
                        "long": "elements",
                        "short": "e",
                        "help": "list all elements of a scheme"
                    },
                    {
                        "long": "buildable",
                        "short": "b",
                        "implies": ["--elements"],
                        "help": "list only buildable elements (implies --elements)"
                    },
                    {
                        "long": "base",
                        "short": "B",
                        "implies": ["--elements"],
                        "help": "list only base elements (implies --elements)"
                    },
                    {
                        "long": "not",
                        "wants": ["--buildable", "--base"],
                        "help": "invert --buildable or --base option"
                    }
                ]
            },
            "operands": {
                "no": [0, 0]
            }
        },
        "ls": {
            "doc": {
                "help": "Get information about available schemes."
            },
            "options": {
                "local": [
                    {
                        "long": "mark-current",
                        "short": "m",
                        "help": "mark the scheme currently in use"
                    },
                    {
                        "long": "group",
                        "short": "g",
                        "help": "group schemes by directory in which they are placed"
                    },
                    {
                        "long": "details",
                        "short": "D",
                        "implies": ["--group"],
                        "help": "display some details about each scheme"
                    }
                ]
            }
        }
    },
    "options": {
        "local": [
            {
                "long": "version",
                "help": "display version information"
            }
        ],
        "global": [
            {
                "short": "h",
                "long": "help",
                "help": "dispay help message"
            },
            {
                "short": "v",
                "long": "verbose",
                "plural": true,
                "help": "display more verbose output"
            },
            {
                "short": "d",
                "long": "debug",
                "help": "display debugging output"
            },
            {
                "short": "q",
                "long": "quiet",
                "conflicts": ["--verbose"],
                "help": "do not print normal messages"
            },
            {
                "short": "t",
                "long": "target",
                "arguments": ["str"],
                "help": "set target directory"
            }
        ]
    },
    "operands": {
        "no": [0, 0]
    }
}
